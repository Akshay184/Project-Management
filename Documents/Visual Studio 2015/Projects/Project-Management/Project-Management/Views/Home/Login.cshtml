@model Project_Management.Models.UserRegistration
@{
    ViewBag.Title = "Login";
   
}

<h2>Login</h2>

@using (Html.BeginForm("Login", "Home", FormMethod.Post))
{
    <fieldset>

        @Html.AntiForgeryToken()
        @Html.ValidationSummary(true)
        @if (@ViewBag.Message != null)
        {
            <div>
                @ViewBag.Message
            </div>

        }
        <table>
            <tr>
                <td>@Html.LabelFor(model => model.UserEmail)</td>
                <td>@Html.TextBoxFor(a => a.UserEmail)</td>
                <td>@Html.ValidationMessageFor(a => a.UserEmail)</td>
                
            </tr>
            <tr>

                <td>@Html.LabelFor(model => model.UserPassword)</td>
                <td>@Html.PasswordFor(model => model.UserPassword)</td>
                <td>@Html.ValidationMessageFor(a => a.UserPassword)</td>

            </tr>
            <tr>
                <td></td>
                <td>
                    <input type="submit" value="Login"/>
                </td>
            </tr>

        </table>
    </fieldset>
}
